{
  "compilerOptions": {
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["es5", "es6", "dom"],
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "dist",
    "removeComments": true,
    "rootDir": "src",
    "sourceMap": true,
    "target": "es6"
  },
  "include": [
    "src/**/*"
  ],
  "parcel-plugin-typescript": {
    "transpileOnly": true
  }
}